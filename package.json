{
  "name": "viral-content-automation",
  "version": "1.0.0",
  "description": "Automated Research → Analysis → Generation Pipeline for Viral Content",
  "main": "index.js",
  "scripts": {
    "start": "node start.js",
    "start:gui": "node gui-launcher.js",
    "start:cli": "node start.js --gui",
    "start:dev": "cross-env NODE_ENV=development node start.js",
    "start:prod": "cross-env NODE_ENV=production node start.js",
    "start:quick": "node start.js --quick",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "validate-setup": "node scripts/validate-setup.js",
    "health-check": "node scripts/health-check.js",
    "monitor": "node monitoring/dashboard.js",
    "startup-sequence": "concurrently \"npm install\" \"npm run validate-setup\" \"npm run test:unit\" \"npm run health-check\" \"npm run monitor\"",
    "test:api-integration": "node scripts/test-api-connections.js",
    "deploy:n8n-workflows": "node scripts/deploy-workflows.js",
    "test:production-run": "node scripts/production-test.js",
    "validate:production": "node scripts/validate-production.js",
    "deploy:monitoring": "node scripts/deploy-monitoring.js",
    "benchmark": "node scripts/performance-benchmark.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js"
  },
  "keywords": [
    "viral-content",
    "automation",
    "social-media",
    "ai-analysis",
    "content-generation",
    "n8n",
    "airtable"
  ],
  "author": "jshin42",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonschema": "^1.4.1",
    "listr2": "^8.0.0",
    "node-fetch": "^3.3.2",
    "open": "^8.4.2",
    "pm2": "^5.3.0",
    "socket.io": "^4.7.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/deploy-*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jshin42/hst_marketing.git"
  },
  "bugs": {
    "url": "https://github.com/jshin42/hst_marketing/issues"
  },
  "homepage": "https://github.com/jshin42/hst_marketing#readme"
}
