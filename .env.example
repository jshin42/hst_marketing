# Viral Content Intake Funnel - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ================================
# AIRTABLE CONFIGURATION
# ================================
# Get these from: https://airtable.com/developers/web/api/introduction
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
AIRTABLE_API_KEY=keyXXXXXXXXXXXXXX

# Credential ID references for n8n (configure in n8n UI)
AIRTABLE_CREDENTIAL_ID=airtable-api-credential

# ================================
# OPENAI CONFIGURATION  
# ================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Credential ID reference for n8n
OPENAI_CREDENTIAL_ID=openai-api-credential

# Model configurations
OPENAI_ANALYSIS_MODEL=gpt-4o
OPENAI_GENERATION_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
OPENAI_WHISPER_MODEL=whisper-1

# ================================
# RAPIDAPI CONFIGURATION
# ================================
# Get your key from: https://rapidapi.com/developer/billing
RAPIDAPI_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Credential ID reference for n8n
RAPIDAPI_CREDENTIAL_ID=rapidapi-credential

# API Endpoints
RAPIDAPI_INSTAGRAM_HOST=instagram-scraper21.p.rapidapi.com
RAPIDAPI_TIKTOK_HOST=tiktok-api23.p.rapidapi.com

# ================================
# APIFY CONFIGURATION
# ================================
# Get your token from: https://console.apify.com/account/integrations
APIFY_TOKEN=apify_api_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Credential ID reference for n8n
APIFY_CREDENTIAL_ID=apify-api-credential

# Actor IDs
APIFY_LINKEDIN_ACTOR_ID=linkedin-post-search-scraper

# ================================
# GMAIL CONFIGURATION
# ================================
# Your Gmail address for email automation
GMAIL_ADDRESS=your-email@gmail.com

# Credential ID reference for n8n (OAuth2 setup required in n8n)
GMAIL_CREDENTIAL_ID=gmail-oauth2-credential

# ================================
# N8N CONFIGURATION
# ================================
# Your n8n instance URL (if using n8n cloud)
N8N_BASE_URL=https://your-instance.app.n8n.cloud

# Timezone for scheduling (adjust to your timezone)
TIMEZONE=America/Chicago

# ================================
# SYSTEM CONFIGURATION
# ================================
# Email address to receive approval notifications
EMAIL_ADDRESS=your-email@gmail.com

# Maximum processing time per workflow run (minutes)
MAX_PROCESSING_TIME=120

# Maximum content items to process per platform per run
MAX_CONTENT_PER_PLATFORM=20

# ================================
# ENGAGEMENT THRESHOLDS
# ================================
# Minimum engagement levels for content analysis

# Instagram thresholds by category
INSTAGRAM_BUSINESS_MIN_LIKES=500
INSTAGRAM_MARKETING_MIN_LIKES=800
INSTAGRAM_LIFESTYLE_MIN_LIKES=2000
INSTAGRAM_DEFAULT_MIN_LIKES=500

# LinkedIn thresholds by category  
LINKEDIN_BUSINESS_MIN_REACTIONS=25
LINKEDIN_MARKETING_MIN_REACTIONS=50
LINKEDIN_TECH_MIN_REACTIONS=30
LINKEDIN_DEFAULT_MIN_REACTIONS=25

# TikTok thresholds by category
TIKTOK_BUSINESS_MIN_VIEWS=10000
TIKTOK_MARKETING_MIN_VIEWS=5000
TIKTOK_LIFESTYLE_MIN_VIEWS=50000
TIKTOK_DEFAULT_MIN_VIEWS=10000

# ================================
# RATE LIMITING CONFIGURATION
# ================================
# API rate limits to prevent overuse

# RapidAPI limits
RAPIDAPI_REQUESTS_PER_MINUTE=500
RAPIDAPI_DAILY_LIMIT=10000

# OpenAI limits
OPENAI_GPT4_REQUESTS_PER_MINUTE=500
OPENAI_WHISPER_REQUESTS_PER_MINUTE=50

# Apify limits
APIFY_MAX_CONCURRENT_RUNS=5

# ================================
# CONTENT ANALYSIS WEIGHTS
# ================================
# Scoring weights for viral content analysis (must sum to 1.0)

# Instagram weights
INSTAGRAM_VIRAL_MECHANICS_WEIGHT=0.30
INSTAGRAM_CONTENT_STRUCTURE_WEIGHT=0.25
INSTAGRAM_PLATFORM_OPTIMIZATION_WEIGHT=0.25
INSTAGRAM_AUTHENTICITY_WEIGHT=0.20

# LinkedIn weights  
LINKEDIN_PROFESSIONAL_AUTHORITY_WEIGHT=0.30
LINKEDIN_BUSINESS_VALUE_WEIGHT=0.25
LINKEDIN_PLATFORM_OPTIMIZATION_WEIGHT=0.25
LINKEDIN_NETWORKING_WEIGHT=0.20

# TikTok weights
TIKTOK_VIRAL_HOOK_WEIGHT=0.35
TIKTOK_ALGORITHM_OPTIMIZATION_WEIGHT=0.30
TIKTOK_AUTHENTICITY_WEIGHT=0.20
TIKTOK_ENTERTAINMENT_VALUE_WEIGHT=0.15

# ================================
# ERROR HANDLING & MONITORING
# ================================
# Error handling configuration

# Retry attempts for failed API calls
MAX_RETRY_ATTEMPTS=3

# Timeout for HTTP requests (seconds)
HTTP_REQUEST_TIMEOUT=30

# Enable/disable error notifications
SEND_ERROR_NOTIFICATIONS=true

# Error notification email
ERROR_NOTIFICATION_EMAIL=admin@yourdomain.com

# ================================
# OPTIONAL: WEBHOOK CONFIGURATION
# ================================
# For advanced integrations and notifications

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord webhook for notifications (optional)  
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ================================
# OPTIONAL: CUSTOM CONFIGURATIONS
# ================================
# Additional customizations

# Custom prompt modifications
USE_CUSTOM_PROMPTS=false
CUSTOM_PROMPTS_PATH=./prompts/custom/

# Enable content caching to avoid re-analysis
ENABLE_CONTENT_CACHE=true
CACHE_DURATION_HOURS=24

# Enable advanced logging
ENABLE_DEBUG_LOGGING=false
LOG_LEVEL=info

# ================================
# DEVELOPMENT/TESTING
# ================================
# Development and testing configurations

# Enable test mode (uses sample data instead of live APIs)
TEST_MODE=false

# Sample data directory for testing
TEST_DATA_PATH=./test-data/

# Skip actual email sending in development
SKIP_EMAIL_SENDING=false

# Limit API calls in development
DEVELOPMENT_API_LIMIT=10